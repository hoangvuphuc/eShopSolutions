@model eShopSolution.ViewModels.Catalog.Products.CategoryAssignRequest

@{
    ViewData["Title"] = "CategoryAssign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1></h1>

<div class="container-fluid">
    <h1 class="mt-4">Create new User</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
        <li class="breadcrumb-item active">Category Assign</li>
    </ol>
    <div class="card mb-4">
        <div class="card-body">
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            <a class="btn btn-success" asp-action="Index" asp-controller="Product">Back to List</a>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="CategoryAssign">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        @for (var i = 0; i < Model.Categories.Count; i++)
                        {
                            <div class="form-group">
                                <label>
                                    @Model.Categories[i].Name
                                    <input type="checkbox" asp-for="Categories[i].Selected" />
                                    <input type="hidden" asp-for="Categories[i].Id" />
                                    <input type="hidden" asp-for="Categories[i].Name" />
                                </label>
                            </div>
                        }
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
